<?xml version="1.0" encoding="UTF-8"?>
<inkscape-extension translationdomain="inkstitch" xmlns="http://www.inkscape.org/namespace/inkscape/extension">
    <name>Stitch Plan Preview</name>
    <id>org.inkstitch.stitch_plan_preview</id>
    <param name="extension" type="string" gui-hidden="true">stitch_plan_preview</param>
    <effect>
        <object-type>all</object-type>
        <effects-menu>
            <submenu name="Ink/Stitch" translatable="no">
                <submenu name="Visualise and Export" />
            </submenu>
        </effects-menu>
    </effect>
    <label appearance="header">Display settings</label>
    <param name="move-to-side" type="boolean" gui-text="Move stitch plan beside the canvas" indent="1">true</param>
    <param name="layer-visibility" type="optiongroup" appearance="combo" gui-text="Design layer visibility" indent="1">
        <option value="0">Unchanged</option>
        <option value="1">Hidden</option>
        <option value="2">Lower opacity</option>
    </param>
    <param name="needle-points" type="boolean" gui-text="Needle points" indent="1">false</param>
    <spacer />
    <separator />
    <spacer />
    <label appearance="header">Density settings</label>
    <param name="num-neighbors" gui-text="Mark red if there are more than this number of stitches" gui-description="0 = no density info" type="int" indent="1" min="0" max="99">0</param>
    <param name="density-radius" gui-text="withing a radius (mm) of" type="float" indent="1" min="0" max="50">1</param>
    <spacer />
    <param name="density-only" gui-text="Display only density points" type="boolean" indent="1">false</param>
    <script>
        {{ command_tag | safe }}
    </script>
</inkscape-extension>
